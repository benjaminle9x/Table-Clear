<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/c_name"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:text="Benjamin Le"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginTop="15dp" />

        <TextView
            android:id="@+id/c_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/c_name"
            android:text="437-235-6499"
            android:textSize="15dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="3dp"/>

        <TextView
            android:id="@+id/c_size"
            android:layout_width="13dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/c_name"
            android:text="3"
            android:textSize="15dp"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="6dp"
            />

        <TextView
            android:id="@+id/c_restaurant"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/c_size"
            android:text="Subway"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="26dp"/>

        <TextView
            android:id="@+id/c_time"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/c_restaurant"
            android:text="14:00"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_marginTop="18dp"
            />

        <TextView
            android:id="@+id/c_tableno"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/c_time"
            android:text="13"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="40dp"/>

    </RelativeLayout>


</androidx.cardview.widget.CardView>